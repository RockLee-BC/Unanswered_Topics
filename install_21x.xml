<?xml version="1.0"?>
<!DOCTYPE modification SYSTEM "http://www.simplemachines.org/xml/modification">
<modification xmlns="http://www.simplemachines.org/xml/modification" xmlns:smf="http://www.simplemachines.org/">
<id>Dougiefresh:UnansweredTopics</id>
<name>Unanswered Topics</name>
<version>1.7</version>

<file name="$boarddir/index.php">
	<operation>
		<search position="before"><![CDATA['about:unknown' => array('Likes.php', 'BookOfUnknown'),]]></search>
		<add><![CDATA[
		'unanswered' => array('Unanswered.php', 'UnansweredTopics'),]]></add>
	</operation>
</file>
<file name="$sourcedir/ManageSettings.php">
	<operation>
		<search position="before"><![CDATA[// Mod authors, add any settings UNDER this line. Include a comma at the end of the line and don't remove this statement!!]]></search>
		<add><![CDATA[
		array('select', 'unanswered_default_view', array($txt['unanswered_view_posts'], $txt['unanswered_view_topics'])),
		array('int', 'unanswered_time_limit', 'postinput' => $txt['days_word']),]]></add>
	</operation>
</file>
<file name="$themedir/index.template.php">
	<operation>
		<search position="before"><![CDATA[<a href="', $scripturl, '?action=unreadreplies" title="', $txt['show_unread_replies'], '">', $txt['unread_replies'], '</a>]]></search>
		<add><![CDATA[
							<a href="', $scripturl, '?action=unanswered', (empty($modSettings['unanswered_default_view']) ? '' : ';topics'), '" title="', $txt['unanswered_topics'], '">', $txt['unanswered_topics'], '</a></li>]]></add>
	</operation>
</file>
</modification>